# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Matches the exact files either in the root or in any subdirectory
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py,*.js,*.jx]
indent_style = space
indent_size = 4

# JavaScript files
[*.js,*.jsx]
indent_style = space
indent_size = 2
